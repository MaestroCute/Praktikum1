<Window x:Class="PropertiesInMarkUp.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:PropertiesInMarkUp"
		mc:Ignorable="d"
		Title="PropertiesInMarkup" MinWidth="480" MinHeight="360" Width="480" Height="360">
	<StackPanel>
        <Rectangle Height="125" Margin="10" Fill="OliveDrab"/>
        <Rectangle Height="125" Margin="10">
			<Rectangle.Fill>
				<LinearGradientBrush>
                    <GradientStop Offset="0" Color="Turquoise"/>
                    <GradientStop Offset="1" Color="Purple"/>
                </LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
	</StackPanel>
</Window>